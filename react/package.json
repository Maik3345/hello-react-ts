{
  "name": "hello-react",
  "version": "0.1.0",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "sonar-scanner": "npm run coverage && node_modules/sonar-scanner/bin/sonar-scanner",
    "upload-sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner",
    "lint": "tsc --noEmit --pretty && tslint -c tslint.json './**/*.ts'"
  },
  "author": "VTEX",
  "license": "ISC",
  "dependencies": {
    "jest-environment-jsdom": "^23.4.0"
  },
  "devDependencies": {
    "@types/node": "^10.11.4",
    "@types/prop-types": "^15.5.6",
    "@types/react": "^16.4.14",
    "babel": "^6.23.0",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react-app": "^3.1.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "sonar-scanner": "^3.1.0",
    "tslint": "^5.11.0",
    "tslint-config-vtex": "^2.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.1",
    "typescript-babel-jest": "^1.0.5"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(ts|tsx)$": "typescript-babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "setupFiles": [
      "./tests-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__tests__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testURL": "http://localhost/",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "(/__test__/.*|(\\.|/)mock)\\.(jsx?|tsx?)$"
    ],
    "collectCoverage": true
  }
}
